/* pages/levelOne/question/question.wxss */
.level-one-question{
    position: relative;
    width: 100vw;
    height: 100vh;
}
.level-one-question .question-bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.level-one-question .question{
    position: absolute;
    top: 36.2%;
    left: 11.4%;
    width: 77.6%;
    height: 17%;
    padding: 30rpx;
    box-sizing: border-box;
}
.level-one-question .question .title{
    line-height: 48rpx;
    color: #333333;
    font-size: 34rpx;
}
.level-one-question .question .page{
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    line-height: 40rpx;
    color: #333333;
    font-size: 28rpx;
}
.level-one-question .answerbutton{
    position: absolute;
    left: 24.5%;
    width: 63%;
    height: 5%;
    border-radius: 18rpx;
    font-size: 28rpx;
    background: #FF8E04;
    color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
}
.level-one-question .answerbutton .item-icon{
    position: absolute;
    right: 35rpx;
    top: 30%;
    width: 28rpx;
    height: 28rpx;
}
.level-one-question .answerbutton.error{
    background: linear-gradient(180deg, #FF9290 0%, #FE5957 100%);
}
.level-one-question .answerbutton.correct{
    background: linear-gradient(180deg, #00E752 0%, #00CD49 100%);
}
.level-one-question .answerA{
    bottom: 37.3%;
}
.level-one-question .answerB{
    bottom: 29.45%;
}